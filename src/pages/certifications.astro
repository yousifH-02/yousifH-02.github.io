<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Yousif Husni | Personal Site</title>
    <style>
      :root { --bg:#0b0f17; --card:#111827; --text:#e5e7eb; --muted:#9ca3af; }
      body { margin:0; font-family: system-ui; background: var(--bg); color: var(--text); }
      .wrap { max-width: 900px; margin: 0 auto; padding: 44px 20px; }
      a { color:#93c5fd; text-decoration:none; }
      .top { display:flex; justify-content:space-between; align-items:center; gap:12px; flex-wrap:wrap; }
      .card { background: var(--card); border:1px solid rgba(255,255,255,.08); border-radius:16px; padding:16px; margin-top:14px; }
      .muted { color: var(--muted); }
      ul { margin: 10px 0 0; padding-left: 18px; }
      li { margin: 10px 0; }
      .tag { display:inline-block; margin-left:8px; font-size:12px; color: var(--muted); }
    </style>
  </head>
  <body>
    <main class="wrap">
      <div class="top">
        <h1 style="margin:0;">Certifications</h1>
        <a href="/">← Home</a>
      </div>

      <section class="card">
        <h2 style="margin:0 0 8px;">Degree</h2>
        <div><strong>{degree.title}</strong></div>
        <div class="muted">{degree.school}</div>
        <div class="muted" style="margin-top:8px;">{degree.notes}</div>
      </section>

      <section class="card">
        <h2 style="margin:0 0 8px;">Contact</h2>
        <div class="muted">Email: <a href={`mailto:${email}`}>{email}</a></div>
      </section>

      <section class="card">
        <h2 style="margin:0 0 8px;">Certificates</h2>
        <div class="muted">Udemy • Forage • More coming soon</div>

        <ul>
          {certifications.map((c) => (
            <li>
              <strong>{c.title}</strong>
              <span class="tag">({c.issuer} • {c.date})</span>
              <div><a href={c.link} target="_blank">View credential →</a></div>
            </li>
          ))}
        </ul>
      </section>
    </main>
  </body>
</html>